@using ABCAPOS.Models
@model CustomerReturnModel
@{
    Layout = null;
}
<script type="text/javascript">
    function voidDocument() {
        var agree = confirm('Are you sure you want to void this document (All Item Fulfillment, Invoice dan Sales Order Payment that are connected are followed)?');

        if (agree) {
            $('#voidForm').submit();
        }
    }
</script>
<form id="voidForm" action="@Url.Content("~/CustomerReturn/VoidRemarks?key=" + Model.ID)" method="post" >
<input type="hidden" name="ID" value="@Model.ID" />
<input type="hidden" name="hdnVoidFromIndex" value="@ViewBag.VoidFromIndex" />
<table class="basic">
    <tr>
        <td style="vertical-align: top; width: 120px">
            Void Remarks
        </td>
        <td style="vertical-align: top" class="separatorColumn">
            :
        </td>
        <td>
            @Html.TextAreaFor(p => p.VoidRemarks, new { style = "width:500px" })
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <input type="button" class="button" value="Save" onclick="voidDocument();" />
            <input type="button" class="button" value="Cancel" id="btnCloseVoidForm" />
        </td>
    </tr>
</table>
</form>
