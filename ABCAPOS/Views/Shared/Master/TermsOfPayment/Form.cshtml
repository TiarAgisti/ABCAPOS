@using MPL.MVC;
@using ABCAPOS.Models;
@using ABCAPOS.Util;
@model TermsOfPaymentModel
@{
    var mode = (UIMode)ViewBag.Mode;
    var formFields = new List<IFormField>()
    {
        //Primary Info
        Html.HiddenFieldFieldObjFor(p=>p.ID,""),
        Html.TextBoxFieldObjFor(p=>p.Name,"NAME", delegate(FormField f){
                f.Style = "width:300px";
            }),
        Html.TextBoxFieldObjFor(p=>p.Terms,"TERMS", delegate(FormField f){
                f.Style = "width:300px";
            }),
    };

    var form = new Form();
    form.Fields = formFields;

}
@Html.MasterForm(form, Model, mode, "TermsOfPayment", "ID", delegate(MasterFormHelper<TermsOfPaymentModel> helper)
{
    if (mode == UIMode.Detail)
    {
        if (!Convert.ToBoolean(ViewBag.AllowCreate))
        {
            helper.CreateAnotherButton.Visible = false;
        }

        if (!Convert.ToBoolean(ViewBag.AllowEdit))
        {
            helper.EditButton.Visible = false;
        }

        helper.DeleteButton.Visible = false;
    }
})
